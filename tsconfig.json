{
  "include": ["src/**/*", "test/index.spec.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
