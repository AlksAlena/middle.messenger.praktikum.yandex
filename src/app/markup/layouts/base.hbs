<!doctype html>
<html lang="ru" dir="ltr">
{{#block "head"}}
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Alyona Eley">
    <meta name="description" content="Training project - Messenger">
    <meta name="keywords" content="messenger, chat">

    {{#block "title"}}
      <title>{{title}}</title>
    {{/block}}

    {{#block "styles"}}
      {{#each stylesheets}}
        <link href="{{this}}" rel="stylesheet">
      {{/each}}
    {{/block}}
  </head>
{{/block}}

{{#block "body"}}
  <body class="{{bodyClass}}">
  {{#block "header"}}
    {{> header}}
  {{/block}}

  {{#block "main"}}
  {{/block}}

  {{#block "footer"}}
    {{> footer}}
  {{/block}}

  {{#block "scripts"}}
    {{#each scripts}}
      <script defer src="{{this}}" type="module"></script>
    {{/each}}
  {{/block}}
  </body>
{{/block}}
</html>