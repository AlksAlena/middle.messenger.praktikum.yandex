---
title: Чаты | Zoo-Chat
chats:
  - userName: Катя
    status: online
  - userName: Коля
    status: offline
  - userName: Оля
    status: offline
  - userName: Настя
    status: offline
  - userName: Павел Сергеевич
    status: offline
  - userName: Kroca
    status: offline
messages:
  - text: Привет, как дела?
    type: out
    status: ok
    date: 15-02-2022, 18:15
  - text: Спасибо, отлично! А ты как?
    type: in
    status: ok
    date: 15-02-2022, 18:17
submitButtonText: Отправить
---

{{#extend "base"}}
  {{#content "main"}}
    <main>
      <div class="content">
        <div class="chats-wrapper">
          <ul class="chats">
            {{#each chats}}
              {{#and userName status}}
                <li class="chat-title">
                  <div class="title-username">
                    <a href="./chats.hbs"><span>{{userName}}</span></a>
                  </div>
                  <div class="title-status"></div>
                </li>
              {{/and}}
            {{/each}}
          </ul>

          <section class="active-chat">
            <ul class="messages">
              {{#if messages}}
                {{#each messages}}
                  {{#and text status date}}
                    <li>
                      <div class="message">
                        <p>{{text}}</p>
                        <p>статус: {{status}}</p>
                        <p>дата отправки: {{date}}</p>
                      </div>
                    </li>
                  {{/and}}
                {{/each}}
              {{/if}}
            </ul>

            <div>
              <form class="editor" action="">
                <textarea class="editor-message"
                          rows="2"
                          name="message"
                          placeholder="Введите сообщение"></textarea>
                {{> submit-button}}
              </form>
            </div>
          </section>
        </div>
      </div>
    </main>
  {{/content}}
{{/extend}}