---
title: Вход | Zoo-Chat
pageHeader: Вход
fields:
  - label: Логин
    inputName: login
    fieldType: text
  - label: Пароль
    inputName: password
    fieldType: password
submitButtonText: Войти
linkText: Ещё не зарегистрированы?
linkUrl: ./sign-up.hbs
---

{{#extend "base"}}
  {{#content "main"}}
    <main>
      <h1>{{pageHeader}}</h1>

      <div class="content">
        <form class="form" action="">
          <ul class="form-fields">
            {{#each fields}}
              {{#and label inputName fieldType}}
                <li class="form-field">
                  <label class="label" for="{{inputName}}">{{label}}</label>
                  <input class="input" name="{{inputName}}" type="{{fieldType}}">
                </li>
              {{/and}}
            {{/each}}
          </ul>

          {{> submit-button}}
        </form>

        <a class="link" href="{{linkUrl}}">{{linkText}}</a>
      </div>
    </main>
  {{/content}}
{{/extend}}