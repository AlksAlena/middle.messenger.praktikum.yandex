---
title: Вход | Zoo-Chat
pageHeader: Вход
fields:
  - label: Логин
    name: login
    type: text
  - label: Пароль
    name: password
    type: password
submitButtonText: Войти
linkText: Ещё не зарегистрированы?
linkUrl: ./sign-up.hbs
---

{{#extend "base"}}
  {{#content "main"}}
    <main>
      <div class="content">
        <form class="form" action="">
          <h1>{{pageHeader}}</h1>

          <ul class="form-fields">
            {{#each fields}}
              {{#and label name type}}
                <li class="form-field">
                  <label class="label" for="{{name}}">{{label}}</label>
                  <input class="input" id="{{name}}" name="{{name}}" type="{{type}}">
                </li>
              {{/and}}
            {{/each}}
          </ul>
          <a class="link" href="{{linkUrl}}">{{linkText}}</a>

          {{> submit-button}}
        </form>
      </div>
    </main>

    <div class="app"></div>
  {{/content}}
{{/extend}}