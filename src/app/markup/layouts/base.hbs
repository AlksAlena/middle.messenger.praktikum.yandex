<!doctype html>
<html lang="ru" dir="ltr">
{{#block "head"}}
  <head>
    {{#block "meta"}}
      {{> meta}}
    {{/block}}

    {{#block "title"}}
      <title>{{title}}</title>
    {{/block}}

    {{#block "styles"}}
      {{#each stylesheets}}
        <link href="{{this}}" rel="stylesheet">
      {{/each}}
    {{/block}}
  </head>
{{/block}}

{{#block "body"}}
  <body class="{{bodyClass}}">
  {{#block "header"}}
    {{> header}}
  {{/block}}

  {{#block "main"}}
  {{/block}}

  {{#block "footer"}}
    {{> footer}}
  {{/block}}

  {{#block "scripts"}}
    {{#each scripts}}
      <script defer src="{{this}}" type="module"></script>
    {{/each}}
  {{/block}}
  </body>
{{/block}}
</html>